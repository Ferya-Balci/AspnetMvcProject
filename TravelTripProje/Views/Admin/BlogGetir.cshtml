@model TravelTripProje.Models.Siniflar.Blog
@{
    ViewBag.Title = "BlogGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Güncelleme Sayfası</h2>
<br />
@using (Html.BeginForm("BlogGüncelle", "Admin", FormMethod.Post)) //1.parametre beginform'un altında bulunan kodlar ne zaman çalışacak 2.BlogGüncelle nerde 3.BlogGüncelle ne zmaan çalışacak(FormMethod.post(sayfada bir butona tıklanıp post işlemi gerçekleştirildiği zaman)
{
    @Html.LabelFor(x => x.ID)
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" }) //readonly(sadece okunabilir format) ile ıd'ye dışarıdan erişim olmayack
    <br />
    @Html.LabelFor(x => x.Baslik)
    @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Tarih)
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.BlogImage)
    @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Aciklama)
    @Html.TextAreaFor(x => x.Aciklama, 15, 1, new { @class = "form-control" }) //15 satır sayısı, 1 sütun sayısı
    <br />
    <button class="btn btn-success">Blog Güncelle</button>
}



@using TravelTripProje.Models.Siniflar
@model List<Blog>
<div class="con-bot">
    @foreach (var x in Model)
    {
        <div class="left">
            <div class="bot-left">
                <img src="@x.BlogImage" style="width:300px; height:150px;" alt="" />
            </div>
            <div class="left-text">
                <h4>@x.Baslik</h4>
                <span class="doller">@x.Tarih.ToString("dd.MM.yyyy")</span>
                @*ToString ile saatleri kaldırıp tarihi yazdırdım.*@
                <p>@x.Aciklama.Substring(0,100)</p>  
                @*substring ile metnin ilk 100 karakterini ekranda gösterdim.*@
                <p><a href="/Blog/BlogDetay/@x.ID"><span class="read">Devamını Oku >></span></a></p>
            </div>
        </div>
    }
    @Html.Action("Partial2","Default")
    
    <div class="clear"></div>
</div>

